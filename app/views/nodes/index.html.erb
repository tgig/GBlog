<%% content_for :title do %>GBlog - Home<%% end %>
  <div id="folderTable" class="container text-center">
    <%= render partial: 'nodes/graph', locals: { folder_id: 0, folder_name: "", title_id: "index", title_name: "" } %>
    <table class="table">
      <tr>
        <th colspan="2">Folder</th>
        <td>File Count</td>
      </tr>
      <% @folders.each do |folder| %>
        <tr>
          <td>
            <svg height="20" width="20">
              <circle cx="10" cy="10" r="8" stroke="#CCCCCC" stroke-width="1" fill="#ddd" />
            </svg>
          </td>
          <td class="text-left"><a href="<%= folder_path(folder[0].parameterize) %>"><%= folder[0] %></a></td>
          <td><%= folder[1] %></td>
        </tr>
      <% end %>
    </table>
  </div>
